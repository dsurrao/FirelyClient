@page
@using FirelyClient.Pages.Utils
@model IndexModel
@{
    ViewData["Title"] = "Patient List";
}

<div class="text-center">
    <h1 class="display-4">Patient List</h1>

    <form>
        <label asp-for="@Model.NameParam" />
        <input asp-for="@Model.NameParam" />
        <input type="submit"/>
    </form>
</div>

<div>
    @if (Model.Patients.Count == 0)
    {
        <p>No patients found.</p>
    }

    <ul class="list-group">
        @foreach (var patient in Model.Patients)
        {
            <li class="list-group-item">
                <a href="Patient?id=@patient.Id">
                    @PatientUtils.GetPatientDescription(patient)
                </a>
            </li>
        }
    </ul>

    <nav aria-label="Page navigation">
        <ul class="pagination">
            @if (!Model.First.Equals(""))
            {
                <li class="page-item">
                    <a class="page-link" href="@Model.First&NameParam=@Model.NameParam">first&nbsp;&nbsp;</a>
                </li>
            }

            @if (!Model.Prev.Equals(""))
            {
                <li class="page-item">
                    <a class="page-link" href="@Model.Prev&NameParam=@Model.NameParam">prev&nbsp;&nbsp;</a>
                </li>
            }

            @if (!Model.Next.Equals(""))
            {
                <li class="page-item">
                    <a class="page-link" href="@Model.Next&NameParam=@Model.NameParam">next&nbsp;&nbsp;</a>
                </li>
            }

            @if (!Model.Last.Equals(""))
            {
                <li class="page-item">
                    <a class="page-link" href="@Model.Last&NameParam=@Model.NameParam">last&nbsp;&nbsp;</a>
                </li>
            }
        </ul>
    </nav>

</div>
